<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorfull_accnt">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BANK DETAILS"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/ifsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IFSC CODE"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/b_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank Name"
                android:textAlignment="center"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <EditText
                android:id="@+id/ac_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Account Number"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/c_ac_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm A/C Number "
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/acc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Account Holder's Name "
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/acc_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number ( Attached with this A/c )"
                android:padding="10dp"
                android:background="@drawable/edittext"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>
            <Button
                android:id="@+id/sub_bank"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_btn"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>