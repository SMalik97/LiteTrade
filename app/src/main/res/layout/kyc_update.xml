<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorfull_accnt2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KYC UPDATE"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id Name:"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:background="@drawable/edittext"
                    android:textAlignment="center"
                    android:padding="10dp"/>
                <Spinner

                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>



            <EditText
            android:inputType="numberDecimal"
        android:id="@+id/num_kyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Id Card number Here."
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
               />

  <LinearLayout
      android:clickable="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:orientation="horizontal">
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:src="@drawable/upload"
          />
      <TextView
          android:id="@+id/pic1"
          android:contextClickable="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Upload Your I'D Card Image Here"
          android:textColor="#f7a961"
          android:textAlignment="center"
          android:textSize="20dp"
          android:layout_marginLeft="10dp"
          android:clickable="true"

          />


  </LinearLayout>

    <Button
        android:id="@+id/kyc"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_btn"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>